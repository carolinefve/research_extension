{
  "manifest_version": 3,
  "name": "NovaMind",
  "version": "0.2.0",
  "description": "Transform your browser into an intelligent research partner",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows",
    "contextMenus",
    "scripting"
  ],

  "host_permissions": [
    "*://arxiv.org/*",
    "*://*.ncbi.nlm.nih.gov/*",
    "*://ieeexplore.ieee.org/*",
    "*://scholar.google.com/*",
    "*://link.springer.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://arxiv.org/*",
        "*://*.ncbi.nlm.nih.gov/*",
        "*://ieeexplore.ieee.org/*",
        "*://scholar.google.com/*",
        "*://link.springer.com/*"
      ],
      "js": ["extensions/pdfjs/pdf.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "results/results.html",
        "results/results.css",
        "results/results.js",
        "dashboard/dashboard.html",
        "dashboard/dashboard.css",
        "dashboard/dashboard.js",
        "extensions/pdfjs/pdf.min.js",
        "extensions/pdfjs/pdf.worker.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      }
    },
    "open_dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open NovaMind Dashboard"
    }
  }
}
